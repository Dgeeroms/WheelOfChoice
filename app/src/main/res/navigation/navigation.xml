<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/titleScreenFragment">

    <fragment
        android:id="@+id/titleScreenFragment"
        android:name="com.natappsone.wheelofchoice.TitleFragment"
        android:label="fragment_title_screen"
        tools:layout="@layout/fragment_title_screen" >
        <action
            android:id="@+id/action_titleScreenFragment_to_spinFragment"
            app:destination="@id/spinFragment" />
        <action
            android:id="@+id/action_titleScreenFragment_to_manageWheelFragment"
            app:destination="@id/manageWheelFragment" />
        <action
            android:id="@+id/action_titleScreenFragment_to_tutorialFragment"
            app:destination="@id/tutorialFragment" />
    </fragment>
    <fragment
        android:id="@+id/spinFragment"
        android:name="com.natappsone.wheelofchoice.SpinFragment"
        android:label="SpinFragment" />
    <fragment
        android:id="@+id/manageWheelFragment"
        android:name="com.natappsone.wheelofchoice.ManageWheelFragment"
        android:label="ManageWheelFragment" />
    <fragment
        android:id="@+id/tutorialFragment"
        android:name="com.natappsone.wheelofchoice.TutorialFragment"
        android:label="TutorialFragment" />
</navigation>